//Question Link: https://www.geeksforgeeks.org/problems/largest-number-formed-from-an-array1117/1

//Java Code

class Solution {

    public  String printLargest(int n, String[] arr) {
        if (arr == null || arr.length == 0) {
            return "";
        }

        Arrays.sort(arr, (String a, String b) -> {
            String ab = a + b;
            String ba = b + a;
            return ba.compareTo(ab);
        });

        StringBuilder sb = new StringBuilder();
        for (String num : arr) {
            if (sb.length() == 0 && num.equals("0")) {
                // Ignore leading zeros
                continue;
            }
            sb.append(num);
        }

        return sb.toString().isEmpty() ? "0" : sb.toString();
    }
}
